.modal {
    overflow: hidden;

    & .modal-window {
        display: block;
        position: absolute;
        top: 0px;
        left: 0px;
        width: 100%;
        height: 100%;
        background-color: #e9e9e96b;
        z-index: 9999;
    }
}

.modal-window {
    display: none;
}

.modal-body {
    width: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #fff;
    padding: 11px;
    border-radius: 4px;
    border: 3px solid #f2f2f2;
    box-shadow: 0 0 2px #a0f3ff;
    text-align: center;
}

.modal-title {
    display: inline-block;
    margin-top: 0px;
    margin-bottom: 0px;
    font-size: 2em;
    color: #191b32;
    border-bottom: 2px solid #e9e9e9;
    position: relative;

    & > span {
        color: orange;
    }

    &::after {
        width: 20%;
        height: 2px;
        background-color: orange;
        position: absolute;
        left: 0px;
        bottom: -2px;
    }
}

.login {
    border: 3px solid #f2f2f2;
    padding-top: 9px;
    padding-bottom: 9px;
    padding-left: 7px;
    border-radius: 2px;
    width: 92%;
    display: block;
    margin-left: auto;
    margin-right: auto;
    color: #646363;
}

.modal-user-info {
    display: none;
    &.modal-active {
        display: block;
    }
}