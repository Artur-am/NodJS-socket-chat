.lists {
    padding-left: 0px;
    & > li {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        height: 46px;
        padding-left: 14px;
        padding-right: 14px;
        margin-bottom: 12px;
        border-radius: 3px;
        color: #777;
        background-color: #eaecffb8;
        border: 2px solid #ebedff;

        & > .list-message {
            white-space: nowrap;
            overflow: hidden;
            padding-left: 7px;
            color: #aaa;
            text-overflow: ellipsis; 
        }
    }
}